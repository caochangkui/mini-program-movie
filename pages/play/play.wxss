/* pages/play/play.wxss */
page {
  background: #fff;
}
.image-wrapper {
  text-align: center;
  padding: 30rpx 0;
}
image  {
  height: 500rpx;
  width: 500rpx;
  border: 20rpx solid #eee;
  border-radius: 50%;
  text-align: center;
}
image.rotate {
  animation: rotate 8s linear infinite normal;
}
@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
.now, .duration {
  font-size: 14px;
  color: red;
}
.time {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.scroll {
  height: 200rpx;
  padding: 20rpx 0;
  background: #f5f5f5;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 50rpx;
}
.red {
  color: #f20;
  font-size: 44rpx;
}