page {
  height: 100%;
}
.item {
  display: inline-block;
  vertical-align: top;
  width: 335rpx;
  margin: 10rpx 20rpx;
  text-align: center;
}
.item image {
  box-shadow: 0 0 10px #ccc;
  width: 100%;
  height: 500rpx;
}
.item text {
  font-size: 24rpx;
  line-height: 1.5;
}

.loading {
  text-align: center;
}
.loading image {
  width: 100rpx;
}
